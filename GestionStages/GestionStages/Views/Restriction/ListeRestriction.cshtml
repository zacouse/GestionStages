
@{
    ViewData["Title"] = "ListeRestriction";
}

<h1>ListeRestriction</h1>


<div id="search" class="row">
    <h1>@lang.FiltreDeRecherche</h1>
    <form name="searchform" method="post" action="@Url.Action("SearchListeMilieuStage", "MilieuStage")">
        <div class="input-field col  m6 s12">
            @Html.TextBox("txtTitre", "")
            <label for="Title">@lang.Titre</label>
        </div>

        <div class="input-field col  m6 s12">
            @Html.TextBox("txtAdresse", "")
            <label for="Address">@lang.Adresse</label>
        </div>
        <div class="row">
            <div class="col xl3 push-xl9 l4 push-l8 m5 push-m7 s4 push-s8 right-align"><a class="btn light-blue" href="javascript:document.searchform.submit();">@lang.Rechercher<i class="material-icons right hide-on-small-and-down">search</i></a></div>
        </div>
    </form>
</div>

<table class="highlight">
    <thead>
        <tr>
            <td>@lang.Titre</td>
            <td>@lang.Description</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @{
            List<Restriction> lesRestrictions = ViewBag.lesRestrictions;
            for (int i = 0; i < lesRestrictions.Count; i++)
            {
                <tr ondblclick="location.href='@Url.Action("ViewRestriction", "Restriction", new { id = lesRestrictions[i].IDRestriction })'">
                    <td>@lesRestrictions[i].Titre</td>
                    <td>@lesRestrictions[i].Description</td>
                    <td><a href="@Url.Action("ViewRestriction", "Restriction", new { id = lesRestrictions[i].IDRestriction })"><i class="material-icons orange-text">remove_red_eye</i></a></td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="row" style="padding-top:5px;">
    <div class="col s2"><a class="btn" href="@Url.Action("Index", "Home")">@lang.Retour</a></div>
    <div class="col s2 push-s9"><a class="btn" href="@Url.Action("ViewRestriction", "Restriction")">@lang.Ajouter</a></div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#search").accordion({
                collapsible: true
            });
        });
    </script>
}