
@{
    ViewData["Title"] = lang.ListeMilieuStage;
}

<h1>@lang.ListeMilieuStage</h1>

@{
    if (ViewBag.error != null && ViewBag.error != "")
    {
        @Html.Raw(ViewBag.error);
    }
}

<table class="highlight responsive-table">
    <thead>
        <tr>
            <td>@lang.Titre</td>
            <td>@lang.Description</td>
            <td>@lang.Adresse</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @{
            List<MilieuStage> lesMilieus = ViewBag.lesMilieus;
            for (int i = 0; i < lesMilieus.Count; i++)
            {
                <tr>
                    <td>@lesMilieus[i].Titre</td>
                    <td>@lesMilieus[i].Description</td>
                    <td>@lesMilieus[i].NoCivique @lesMilieus[i].Rue, @lesMilieus[i].Ville &nbsp; @lesMilieus[i].Province, @lesMilieus[i].Pays </td>
                    <td><a href="@Url.Action("Test", "Home", new { id = lesMilieus[i].IDMilieuStage })"><i class="material-icons orange-text">remove_red_eye</i></a></td>
                </tr>
            }
        }
    </tbody>
</table>


<div class="row" style="padding-top:5px;">
    <div class="col s2"><a class="btn" href="@Url.Action("Test", "Home")">@lang.Retour</a></div>
    <div class="col s2 push-s9"><a class="btn" href="@Url.Action("Test", "Home")">@lang.Ajouter</a></div>
</div>
