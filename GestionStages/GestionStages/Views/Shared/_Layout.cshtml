<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionStages</title>
    <link rel="stylesheet" href="~/lib/materialize-v1.0.0/materialize/css/materialize.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper">
                <ul class="left">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Test">Test</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="MilieuStage" asp-action="ListeMilieuStage">@lang.ListeMilieuStage</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="MilieuStage" asp-action="AjouterModifierMilieuStage">@lang.AjouterUnMilieuDeStage</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Stage" asp-action="AddSetStage">@lang.AjouterUnStage</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Stage" asp-action="ListeStage">@lang.ListeStage</a>
                    </li>
                    <li>
                        <form name="user">
                            <div class="input-field">
                                <div class="switch" style="text-align:center">
                                    <label>
                                        @Html.Label("ChkEtat", "Coordonateur")
                                        @Html.CheckBox("isEtudiant",false)
                                        <span class="lever"></span>
                                        @Html.Label("ChkEtat", "Etudiant")
                                    </label>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - GestionStages - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
        <script src="~/lib/jquery-ui-1.12.1/jquery-ui.js"></script>
        <script src="~/lib/materialize-v1.0.0/materialize/js/materialize.js"></script>

    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
